    <Script type="xscript5.0"><![CDATA[
this.fn_Retrieve = function(obj:Button,  e:nexacro.ClickEventInfo)
{
	var sSearch=this.edtSearch.text;
	
	if( String(sSearch).valueOf() == "undefined") 
	{
		sSearch="";
	}

	this.transaction("trSelect"
				    ,"DataURL::employees_select.jsp?full_name="+sSearch
				    ,""
				    ,"ds_emp=ds_employees" 
				    ,""
				    ,"fn_callback");
}

this.fn_callback = function(trID, nErrCD, sErrMSG)
{
	if (nErrCD < 0)
	{
		this.alert("Select : Fail!!!:"+sErrMSG);
	}
	else
	{
		this.alert("Select : Success");
	}
}]]></Script>
