  <TypeDefinition url="..\default_typedef.xml"/>
  <Form id="SelectEMP" classname="SelectEMP" inheritanceid="" left="0" top="0" width="800" height="600" titletext="New Form" onload="SelectEMP_onload">
    <Layouts>
      <Layout>
        <Static id="sta_title" text="Employees" left="12" top="16" width="116" height="34"/>
        <Edit id="edtSearch" taborder="1" left="131" top="16" width="116" height="34"/>
        <Button id="btnRetrieve" taborder="2" text="Retrieve" left="248" top="16" width="116" height="34" onclick="fn_Retrieve" position="absolute"/>
        <Grid id="Grid00" taborder="3" useinputpanel="false" left="10" top="62" width="782" height="526" binddataset="ds_emp">
          <Formats>
            <Format id="default">
              <Columns>
                <Column size="40"/>
                <Column size="72"/>
                <Column size="139"/>
                <Column size="89"/>
                <Column size="102"/>
                <Column size="63"/>
                <Column size="80"/>
                <Column size="117"/>
                <Column size="281"/>
              </Columns>
              <Rows>
                <Row size="24" band="head"/>
                <Row size="24" band="head"/>
                <Row size="24"/>
                <Row size="24" band="summ"/>
              </Rows>
              <Band id="head">
                <Cell/>
                <Cell col="1" colspan="2" text="Employees"/>
                <Cell col="3" rowspan="2" text="Dept"/>
                <Cell col="4" rowspan="2" text="HireDate"/>
                <Cell col="5" rowspan="2" text="Gender"/>
                <Cell col="6" rowspan="2" text="Married"/>
                <Cell col="7" rowspan="2" text="Salary"/>
                <Cell col="8" rowspan="2" text="Memo"/>
                <Cell row="1"/>
                <Cell row="1" col="1" text="ID"/>
                <Cell row="1" col="2" text="Name"/>
              </Band>
              <Band id="body">
                <Cell celltype="head" style="align:center;background:gainsboro;background2:gainsboro;" text="expr:currow+1"/>
                <Cell col="1" style="align:center;color:EXPR(GENDER=='W' ? 'blue' : 'red' );color2:EXPR(GENDER=='W' ? 'blue' : 'red' );" text="bind:EMPL_ID" mask="AA-###"/>
                <Cell col="2" style="color:EXPR(GENDER=='W' ? 'blue' : 'red' );color2:EXPR(GENDER=='W' ? 'blue' : 'red' );" text="bind:FULL_NAME"/>
                <Cell col="3" displaytype="combo" text="bind:DEPT_ID" combodataset="ds_dept" combocodecol="code" combodatacol="text"/>
                <Cell col="4" text="bind:HIRE_DATE"/>
                <Cell col="5" text="expr:GENDER=='W' ? 'Female' : 'Male'"/>
                <Cell col="6" displaytype="checkbox" text="bind:MARRIED"/>
                <Cell col="7" text="bind:SALARY"/>
                <Cell col="8" text="bind:EMPL_MEMO"/>
              </Band>
              <Band id="summary">
                <Cell/>
                <Cell col="1" colspan="2" style="align:center;" text="expr:'Total : '+comp.parent.ds_emp. getRowCount()"/>
                <Cell col="3"/>
                <Cell col="4"/>
                <Cell col="5"/>
                <Cell col="6"/>
                <Cell col="7" displaytype="number" text="expr:comp.parent.ds_emp.getSum('SALARY')"/>
                <Cell col="8"/>
              </Band>
            </Format>
          </Formats>
        </Grid>
      </Layout>
    </Layouts>
